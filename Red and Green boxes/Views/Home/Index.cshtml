@model List<Red_and_Green_boxes.Controllers.WorkflowBox>

<!DOCTYPE html>
<html> BAZINGA
<head>
    <title>GitHub Workflow Status</title>
    <style>
        .box {
            width: 150px;
            height: 150px;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            font-size: 16px;
            font-weight: bold;
            color: white;
            margin: 10px;
            border-radius: 10px;
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <h2>GitHub Workflow Status</h2>
    <div style="display: flex; flex-wrap: wrap;">
        @foreach (var box in Model)
        {
            <div class="box" style="background-color: @box.Color;">
                @box.Name
            </div>
        }
    </div>
</body>
</html>
