@model List<Red_and_Green_boxes.Controllers.Box>

@{
    ViewData["Title"] = "Dynamic Color Boxes";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            display: grid;
            grid-template-columns: repeat(6, 1fr); /* 6 columns */
            grid-template-rows: repeat(2, 1fr); /* 2 rows */
            gap: 10px; /* Space between boxes */
            width: 80%;
            margin: auto;
        }

        .box {
            width: 100px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            font-weight: bold;
            color: white;
            border-radius: 8px;
            text-align: center;
        }
    </style>
</head>
<body>
    <h2 style="text-align: center;">Dynamic Color Boxes</h2>

    <div class="container">
        @foreach (var box in Model)
        {
            <div class="box" style="background-color: @box.Color;">
                @box.Name
            </div>
        }
    </div>
</body>
</html>
